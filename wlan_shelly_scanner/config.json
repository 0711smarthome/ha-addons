{
    "name": "WLAN Scanner",
    "version": "0.4.6",
    "slug": "wifi_scanner",
    "description": "Sucht und konfiguriert Shelly-WLAN-Netzwerke.",
    "arch": [ "aarch64", "amd64", "armhf", "armv7", "i386" ],
    "startup": "application",
    "boot": "auto",
    "init": false,

    "host_network": true,
    "host_dbus": true,       
    "full_access": true,     
    
    "privileged": [
        "NET_ADMIN",
        "SYS_ADMIN",
        "SYS_RAWIO"          
    ],
    
    "devices": [
        "/dev/wlan0:/dev/wlan0:rwm", 
        "/dev/net/tun:/dev/net/tun:rwm"
    ],
    
    "ingress": true,
    "ingress_port": 54321,
    "panel_icon": "mdi:wifi-search",
    
    "options": {
        "interface": "wlan0"
    },
    "schema": {
        "interface": "str"
    }
}
