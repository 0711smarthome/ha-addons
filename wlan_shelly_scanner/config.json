{
  "name": "WLAN Scanner",
  "version": "1.1.2",
  "slug": "wifi_scanner",
  "description": "Sucht periodisch nach WLAN-Netzwerken und gibt sie im Log aus.",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "host_network": true,
  "privileged": [
    "NET_ADMIN"
  ],
  "options": {
    "interface": "wlan0",
    "scan_interval": 60
  },
  "schema": {
    "interface": "str",
    "scan_interval": "int(10,)"
  }
}