{
  "name": "WLAN Scanner",
  "version": "5.0.1",
  "slug": "wifi_scanner",
  "description": "Sucht und konfiguriert Shelly-WLAN-Netzwerke.",
  "arch": [ "aarch64", "amd64", "armhf", "armv7", "i386" ],
  "startup": "application",
  "boot": "auto",
  "init": false,

  "map": ["dbus"],

  "host_network": true,
  
  "ingress": true,
  "ingress_port": 54321, 
  "panel_icon": "mdi:wifi-search",

  "options": {
    "interface": "wlan0"
  },
  "schema": {
    "interface": "str"
  }
}