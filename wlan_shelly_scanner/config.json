{
  "name": "WLAN Scanner",
  "version": "1.2.7",
  "slug": "wifi_scanner",
  "description": "Sucht periodisch nach WLAN-Netzwerken und gibt sie im Log aus.",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "host_network": true,
  "privileged": [
    "NET_ADMIN"
  ],
  "ingress": true,
  "panel_icon": "mdi:wifi-search",
  "options": {
    "interface": "wlan0",
    "scan_interval": 60,
    "safe_mode": true
  },
  "schema": {
    "interface": "str",
    "scan_interval": "int(10,)",
    "safe_mode": "bool"
  }
}