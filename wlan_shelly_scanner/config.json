{
  "name": "WLAN Scanner",
  "version": "7.0.0-FINAL",
  "slug": "wifi_scanner",
  "description": "Sucht und konfiguriert Shelly-WLAN-Netzwerke.",
  "arch": [ "aarch64", "amd64", "armhf", "armv7", "i386" ],
  "startup": "application",
  "boot": "auto",
  "init": false,

  "host_network": true,

  "map": [
    "dbus"
  ],
  
  "privileged": [
    "NET_ADMIN",
    "SYS_ADMIN"
  ],

  "ingress": true,
  "ingress_port": 54321,
  "panel_icon": "mdi:wifi-search",

  "options": {
    "interface": "wlan0"
  },
  "schema": {
    "interface": "str"
  }
}